# Application
PORT=3000

# Database (Prisma with SQLite)
DATABASE_URL="file:./data/busnoti.db"

# 경기도 GBIS API Key
# Get from: https://www.data.go.kr/data/15080666/openapi.do
GYEONGGI_API_KEY=your_gyeonggi_api_key_here

# 서울 버스 API Key
# Get from: https://www.data.go.kr/data/15000303/openapi.do
SEOUL_API_KEY=your_seoul_api_key_here

# Web Push (VAPID Keys)
# Generate with: npx web-push generate-vapid-keys
WEB_PUSH_PUBLIC_KEY=
WEB_PUSH_PRIVATE_KEY=
WEB_PUSH_CONTACT=mailto:your-email@example.com

# SMTP Configuration (for email notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@example.com
